<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imagenincidencia"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:contentDescription="@string/imagen"
            android:src="@drawable/baseline_how_to_vote_24"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/txtFecha"
                android:layout_width="184dp"
                android:layout_height="20dp"
                android:layout_gravity="left"
                android:layout_weight="1.9"
                android:text="Incidencia"
                android:textColor="@color/grisOscuro"
                android:textSize="13dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/txtIncidencia"
                android:layout_width="184dp"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:layout_weight="1.9"
                android:text="Incidencia"
                android:textColor="@color/grisOscuro"
                android:textSize="13dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/txtObservaciones"
                android:layout_width="112dp"
                android:layout_height="40dp"
                android:layout_gravity="start"
                android:layout_weight="1.9"
                android:text="Observaciones"
                android:textColor="@color/grisOscuro"
                android:textSize="13dp"
                android:textStyle="bold"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/idinc"
                android:layout_width="142dp"
                android:layout_height="1dp"
                android:layout_marginStart="20dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/idruta"
                android:layout_width="142dp"
                android:layout_height="1dp"
                android:layout_marginStart="20dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txttienda"
                android:layout_width="142dp"
                android:layout_height="1dp"
                android:layout_marginStart="20dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txtfechahora_respuesta"
                android:layout_width="142dp"
                android:layout_height="1dp"
                android:layout_marginStart="20dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txtrespuesta"
                android:layout_width="142dp"
                android:layout_height="1dp"
                android:layout_marginStart="20dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txtdireccion"
                android:layout_width="142dp"
                android:layout_height="1dp"
                android:layout_marginStart="20dp"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>

